{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Preview Qiita",
            "type": "shell",
            "command": "npx qiita preview",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "clear": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Generate Article from Clipboard",
            "type": "shell",
            "command": "node",
            "args": [
                "${workspaceFolder}/src/index.js"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "clear": true
            }
        },
        {
            "label": "Create & Preview Article from Clipboard",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Generate Article from Clipboard",
                "Preview Qiita"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Create New Qiita Article",
            "type": "shell",
            "command": "npx",
            "args": [
                "qiita",
                "new",
                "${input:articleName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Publish Qiita Article",
            "type": "shell",
            "command": "npx",
            "args": [
                "qiita",
                "publish",
                "${input:articleName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ],
    "inputs": [
        {
            "id": "articleName",
            "type": "promptString",
            "description": "Enter the article name",
            "default": "new-article"
        }
    ]
}